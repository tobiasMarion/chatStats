<article data-person="<%= index %>"
  class="py-8 w-full md:w-fit max-w-full md:max-w-lg bg-white shadow-lg rounded-2xl border-slate-100 border-2 mt-8">

  <header class="flex flex-col items-center mb-4">
    <img src="https://api.dicebear.com/5.x/big-smile/svg?seed=<%= person.name %>" alt="Avatar"
      class="w-32 md:w-40 h-auto">
    <h3 data-stats="name" class="text-2xl md:text-3xl font-semibold text-slate-600">
      <%= person.name %>
    </h3>
  </header>

  <main>
    <ul>
      <li class="px-4 flex items-center border-y border-dashed border-slate-100 py-1 text-slate-500">
        Messages:
        <span data-stats="messages" class="font-medium text-green-600 flex-1 text-right">
          <%= person.messages.toLocaleString() %>
        </span>
      </li>
      <li class="px-4 flex items-center py-1 border-b border-dashed border-slate-100 text-slate-500">
        Characters: <span data-stats="characters" class="font-medium text-green-600 flex-1 text-right">
          <%= person.characters.toLocaleString() %>
        </span>
      </li>
      <li class="px-4 flex items-center py-1 border-b border-dashed border-slate-100 text-slate-500">
        Big messages: <span data-stats="characters" class="font-medium text-green-600 flex-1 text-right">
          <%= person.bigMessages.toLocaleString() %>
        </span>
      </li>
      </li>

    </ul>

    <ul class="grid grid-cols-2 md:flex md:justify-center pt-8 gap-6 px-4 text-center">
      <li>
        <img src="./assets/media/sticker.svg" alt="Figurinhas" class="w-10 md:w-8 mx-auto">
        <p class="text-slate-500 whitespace-nowrap text-base"><span data-type="sticker">
            <%= person.types.stickers %>
          </span> Stickers</p>
      </li>
      <li>
        <img src="./assets/media/audio.svg" alt="Áudios" class="w-10 md:w-8 mx-auto">
        <p class="text-slate-500 whitespace-nowrap text-base"><span data-type="audio">
            <%= person.types.audios %>
          </span> Audios</p>
      </li>
      <li>
        <img src="./assets/media/image.svg" alt="Imagens" class="w-10 md:w-8 mx-auto">
        <p class="text-slate-500 whitespace-nowrap text-base"><span data-type="image">
            <%= person.types.images %>
          </span> Photos</p>
      </li>
      <li>
        <img src="./assets/media/video.svg" alt="Vídeo" class="w-10 md:w-8 mx-auto">
        <p class="text-slate-500 whitespace-nowrap text-base"><span data-type="video">
            <%= person.types.videos %>
          </span> Videos</p>
      </li>

      <% if (person.types.media) { %>
        <li class=" col-span-2">
          <img src="./assets/media/image.svg" alt="Mídias" class="w-10 md:w-8 mx-auto">
          <p class="text-slate-500"><span data-type="media">
              <%= person.types.medias %>
            </span> Media</p>
        </li>
        <% } %>
    </ul>
  </main>
</article>